{
  "id": "book",
  "label": "Book",
  "format": "custom",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": ""
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "",
          "allowTargetBlank": true,
          "single": "heading1"
        }
      },
      "author": {
        "type": "Text",
        "config": {
          "label": "Author",
          "placeholder": ""
        }
      },
      "isbn": {
        "type": "Text",
        "config": {
          "label": "ISBN",
          "placeholder": ""
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,list-item,o-list-item"
        }
      },
      "excerpt": {
        "type": "StructuredText",
        "config": {
          "label": "Excerpt",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,strong,em,hyperlink"
        }
      },
      "cover_image": {
        "type": "Image",
        "config": {
          "label": "Cover Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "gallery": {
        "type": "Group",
        "config": {
          "label": "Gallery",
          "fields": {
            "image": {
              "type": "Image",
              "config": {
                "label": "Image",
                "constraint": {},
                "thumbnails": []
              }
            },
            "caption": {
              "type": "Text",
              "config": {
                "label": "Caption",
                "placeholder": ""
              }
            }
          }
        }
      },
      "amazon_url": {
        "type": "Link",
        "config": {
          "label": "Amazon URL",
          "placeholder": "",
          "allowTargetBlank": true
        }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "Category",
          "placeholder": "",
          "options": ["primary", "junior-high", "senior-high"]
        }
      },
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "fields": {
            "tag": {
              "type": "Text",
              "config": {
                "label": "Tag",
                "placeholder": ""
              }
            }
          }
        }
      },
      "editor_notes": {
        "type": "StructuredText",
        "config": {
          "label": "Editor Notes",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,strong,em,hyperlink,list-item,o-list-item"
        }
      },
      "reviews": {
        "type": "Group",
        "config": {
          "label": "Reviews",
          "fields": {
            "reviewer_name": {
              "type": "Text",
              "config": {
                "label": "Reviewer Name",
                "placeholder": ""
              }
            },
            "rating": {
              "type": "Number",
              "config": {
                "label": "Rating",
                "placeholder": ""
              }
            },
            "comment": {
              "type": "StructuredText",
              "config": {
                "label": "Comment",
                "placeholder": "",
                "allowTargetBlank": true,
                "multi": "paragraph,preformatted,strong,em,hyperlink"
              }
            }
          }
        }
      }
    }
  }
}